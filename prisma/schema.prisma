generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  category    String
  price       Decimal  @db.Decimal(10, 2)
  image_url   String?
  active      Boolean  @default(true)
  stock       Int      @default(0)
  created_at  DateTime @default(now())
}

model PushSubscription {
  id        String   @id @default(cuid())
  endpoint  String   @unique // La URL única del navegador
  p256dh    String // Clave de encriptación 1
  auth      String // Clave de encriptación 2
  createdAt DateTime @default(now())

  // Es buena práctica mapear el nombre del modelo (CamelCase) 
  // al nombre de la tabla en la BD (snake_case)
  @@map("push_subscriptions")
}
